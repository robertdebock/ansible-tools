---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
lint:
  name: yamllint
driver:
  name: {{ item }}
  provider:
    name: virtualbox
platforms:
  - name: {{ role_name }}-debian
    box: debian/stretch64
  - name: {{ role_name }}-fedora
    box: fedora/29-cloud-base
provisioner:
  name: ansible
  playbooks:
    prepare: ../resources/prepare.yml
    converge: ../resources/playbook.yml
  lint:
    name: ansible-lint
scenario:
  name: {{ item }}
