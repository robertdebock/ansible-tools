---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
lint:
  name: yamllint
driver:
  name: docker
platforms:
  - name: {{ role_name }}-{{ item }}
    image: {{ item | regex_replace('-',':') }}
    command: sh -c "while true ; do sleep 1 ; done"
provisioner:
  name: ansible
  lint:
    name: ansible-lint
scenario:
  name: {{ item }}
