---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
lint:
  name: yamllint
driver:
  name: docker
platforms:
  - name: "${namespace:+$namespace-}${image:-fedora}${TOX_ENVNAME:+-$TOX_ENVNAME}"
    image: "${namespace:+$namespace/}${image:-fedora}${tag:+:$tag}"
    command: sh -c "while true ; do sleep 30 ; done"
    pre_build_image: yes
provisioner:
  name: ansible
{% if verify.stat.exists  %}
verifier:
  name: ansible
  lint:
    name: ansible-lint
    enabled: false
{% endif %}
scenario:
  name: default
