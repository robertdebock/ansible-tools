---
dependency:
  name: galaxy
  options:
    role-file: requirements.yml
lint:
  name: yamllint
driver:
  name: docker
platforms:
  - name: {{ role_name }}-alpine-edge
    image: alpine:edge
    pre_build_image: yes
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name }}-alpine-latest
    image: alpine:latest
    pre_build_image: yes
    command: sh -c "while true ; do sleep 1 ; done"
  - name: {{ role_name }}-archlinux
    image: archlinux/base
    pre_build_image: yes
  - name: {{ role_name }}-centos-6
    image: centos:6
    pre_build_image: yes
  - name: {{ role_name }}-centos-latest
    image: centos:latest
    pre_build_image: yes
  - name: {{ role_name }}-debian-latest
    image: debian:latest
    pre_build_image: yes
  - name: {{ role_name }}-debian-stable
    image: debian:stable
    pre_build_image: yes
  - name: {{ role_name }}-debian-unstable
    image: debian:unstable
    pre_build_image: yes
  - name: {{ role_name }}-fedora-latest
    image: fedora:latest
    pre_build_image: yes
  - name: {{ role_name }}-fedora-rawhide
    image: fedora:rawhide
    pre_build_image: yes
  - name: {{ role_name }}-opensuse-leap
    image: opensuse:leap
    pre_build_image: yes
  - name: {{ role_name }}-ubuntu-latest
    image: ubuntu:latest
    pre_build_image: yes
  - name: {{ role_name }}-ubuntu-rolling
    image: ubuntu:rolling
    pre_build_image: yes
  - name: {{ role_name }}-ubuntu-devel
    image: ubuntu:devel
    pre_build_image: yes
provisioner:
  name: ansible
  playbooks:
    prepare: ../resources/prepare.yml
    converge: ../resources/playbook.yml
  lint:
    name: ansible-lint
scenario:
  name: {{ item }}
